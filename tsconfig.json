{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@atoms/*": [
        "src/atoms/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@static/*": [
        "src/static/*"
      ],
      "@src/*": [
        "src/*"
      ], // Add this line
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}